<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/c050505">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/preview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_title_back"/>

        <ImageView
            android:id="@+id/preview_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/selector_image_select"/>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/preview_viewpager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center">

    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="@color/c222">

        <TextView
            android:id="@+id/preview_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical|left"
            android:textSize="15sp"
            android:textColor="@color/ffffff"
            android:text="@string/app_cancel"/>


        <TextView
            android:id="@+id/preview_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical|right"
            android:textSize="15sp"
            android:textColor="@color/ffffff"
            android:text="@string/app_ok"/>


    </FrameLayout>

</FrameLayout>